@model CheckOutVM



@{
	decimal totalCart = Model.Carts.Sum(x => x.Quantity * x.ProductPrice);
	decimal shipmentFee = 100;
	if (totalCart >= ViewBag.ShipmentFee) shipmentFee = 0;


}
<!-- Page info -->
<div class="page-top-info">
	<div class="container">
		<h4>Sepetim</h4>
		<div class="site-pagination">
			<a href="">Ana Sayfa</a> /
			<a href="">Sepetim</a>
		</div>
	</div>
</div>
<!-- Page info end -->
<!-- checkout section  -->
<section class="checkout-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 order-2 order-lg-1">
				<form  asp-controller="Cart" asp-action="CheckOut" method="post" class="checkout-form">
					<div class="cf-title">Kişisel Bilgiler</div>

					<div class="row address-inputs">
						<div class="col-md-12">
							<input type="text" asp-for="@Model.Order.NameSurname" placeholder="Adı Soyadı">
						</div>
						<div class="col-md-12">
							<input type="text" asp-for="@Model.Order.MailAddress" placeholder="Mail Adresi">
						</div>
						<div class="col-md-12">
							<input type="text" asp-for="@Model.Order.Phone" placeholder="Telefon Numarası">
						</div>
						
					</div>

					<div class="cf-title">Teslimat Bilgileri</div>
					<div class="row address-inputs">
						<div class="col-md-12">
							<input type="text" asp-for="@Model.Order.Address" placeholder="Adres Bilgisi"/>

						</div>
						<div class="col-md-6">
							<input type="text" asp-for="@Model.Order.Country" placeholder="Ülke"/>

						</div>
						<div class="col-md-6">
							<input type="text" asp-for="@Model.Order.City" placeholder="Şehir"/>

						</div>
						<div class="col-md-6">
							<input type="text" asp-for="@Model.Order.District" placeholder="İlçe"/>

						</div>
						<div class="col-md-6">
							<input type="text" asp-for="@Model.Order.ZipCode" placeholder="Posta Kodu"/>

						</div>
					
					
					</div>
					<div class="cf-title">Ödeme Seçenekleri</div>

					<div class="row address-inputs" >

					<div class="col-md-12">
						<select class="selectPaymentOption form-control" asp-for="@Model.Order.PaymentOption" asp-items="@Html.GetEnumSelectList<EPaymentOption>()" onchange="funcSelectPaymentOption(this)">
							<option value="">Bir Ödeme Seçeneği Belirtin</option>

						</select>
					</div>
                    </div>

					<div class="row address-inputs">
						<div class="col-md-12">
							<div class="divPaymentOption creditCard">
								<div class="row">
									<div class="col-md-6">
										<input type="text" asp-for="@Model.Order.CardNumber" placeholder="Kredi Kartı Numarası"/>
									</div>
									<div class="col-md-6">
										<input type="text" placeholder="Kredi Kartı Sahibi"/>
									</div>
									<div class="col-md-4">
										<select class="form-control" asp-for="@Model.Order.CardMonth">
											@for (int i = 1; i <= 12; i++)
													{
														<option>@i</option>
													}
										</select>
									</div>
									<div class="col-md-4">
										<select class="form-control" asp-for="@Model.Order.CardYear">
											@for (int i = DateTime.Now.Year; i < DateTime.Now.AddYears(10).Year; i++)
													{
														<option>@i</option>
													}
										</select>
									</div>
									<div class="col-md-4">
										<input type="text" asp-for="@Model.Order.CardCV2" placeholder="CV2"/>
									</div>
								</div>
							</div>
							<div class="divPaymentOption bank">
								<h4>Havale/EFT ile ödeme</h4>
								<p>Ziraat: IBAN</p>
								<p>Halk Bank: IBAN</p>
								<p>İş Bankası: IBAN</p>
								<p>Garanti: IBAN</p>
								<p>Vakıf Bank: IBAN</p>
								<p>Not: Açıklamaya Sipariş No Yazınız</p>
							</div>
							
							<div class="divPaymentOption door">
								<h4>Kapıda Ödeme</h4>
								<p>
									Not: Kapıda ödemede kargo açıldıktan sonra iade kabul edilmemektedir.
								</p>
							</div>

						</div>
					</div>




					<button type="submit" class="site-btn submit-order-btn">Alışverişi Tamamla</button>
					@Html.AntiForgeryToken()
				</form>
			</div>
			<div class="col-lg-4 order-1 order-lg-2">
				<div class="checkout-cart">
					<h3>Sepetim</h3>
					<ul class="product-list">
						@foreach (Cart c in Model.Carts)
						{
							<li>
								<div class="pl-thumb"><img src="@c.ProductPicture" alt="@c.ProductName"></div>
								<h6>@c.ProductName</h6>
								<p>$@c.ProductPrice</p>
							</li>
						}
					</ul>
					<ul class="price-list">
						<li>Toplam<span>$@totalCart</span></li>
						<li>Kargo Ücreti
						<span>
						   @if (shipmentFee == 0)
								{
								  <span>Kargo Ücretsiz</span>	
								}
								else
								{
									<span>@shipmentFee</span>
								}
						</span></li>
						<li class="total">Toplam Ücret<span>$@(totalCart+shipmentFee)</span></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- checkout section end -->