@model List<Cart>

<!-- Page info -->
<div class="page-top-info">
	<div class="container">
		<h4>Your cart</h4>
		<div class="site-pagination">
			<a href="">Ana Sayfa</a> /
			<a href="">Sepetim</a>
		</div>
	</div>
</div>
<!-- Page info end -->
<!-- cart section end -->
<section class="cart-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="cart-table">
					<h3>Sepetim</h3>
					<div class="cart-table-warp">
						<table>
							<thead>
								<tr>
									<th class="product-th">Ürün Adı</th>
									<th class="quy-th">Adet</th>
									<th class="size-th"></th>
									<th class="total-th">Fiyat</th>
								</tr>
							</thead>
							<tbody>
								@foreach (Cart c in Model)
								{
									<tr>
										<td class="product-col">
											<img src="@c.ProductPicture" alt="@c.ProductName">
											<div class="pc-title">
												<h4>@c.ProductName</h4>
												<p>$@c.ProductPrice</p>
											</div>
										</td>
										<td class="quy-col">
											<div class="quantity">
												<div class="pro-qty">
													<input type="text" value="@c.Quantity">
												</div>
											</div>
										</td>
										<td class="size-col"><i onclick="removeCart(@c.ProductID)" class="flaticon-remove removeIcon"></i></td>
										<td class="total-col"><h4>$@(c.Quantity * c.ProductPrice)</h4></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
					<div class="total-cost">
						<h6>TOPLAM<span>$@Model.Sum(x => x.Quantity * x.ProductPrice)</span></h6>
					</div>
				</div>
			</div>
			<div class="col-lg-4 card-right">
				<form class="promo-code-form">
					<input type="text" placeholder="Enter promo code">
					<button>Submit</button>
				</form>
				<a asp-controller="Cart" asp-action="CheckOut" class="site-btn">Alışverişi Tamamla</a>
				<a href="/" class="site-btn sb-dark">Alışverişe Devam Et</a>
			</div>
		</div>
	</div>
</section>
<!-- cart section end -->
