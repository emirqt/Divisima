@using Divisima.UI.Tools
@model Product

<div class="product-item">
	<div class="pi-pic">
		@if (Model.ProductPictures.Any())
		{
			<img src="@Model.ProductPictures.FirstOrDefault().Picture" alt="@Model.Name">
		}
		else
		{
			<img src="/img/Gorsel-Hazirlanmaktadir.jpg" alt="@Model.Name" />
		}
		<div class="pi-links">
			<a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTools.GetUrl(Model.Name)" asp-route-id="@Model.ID" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
			<a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
		</div>
	</div>
	<div class="pi-text">
		<h6>$@Model.Price</h6>
		<p>@Model.Name</p>
	</div>
</div>