@model IQueryable<Product>

<div class="container body">
      <div class="main_container">
        

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">

            

            <div class="row">
              <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                                <h2>Ürün Yönetimi</h2>
                                <a asp-controller="Product" asp-action="New" class="btn btn-success float-right">Yeni Ürün</a>
                                <div class="clearfix"></div>
                        </div>
                            
                  <div class="x_content">
                      <div class="row">
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                      <thead>
                        <tr>
                          <th>Ürün Adı</th>
                          <th>Ürün Fiyatı</th>
                          <th>Ürün Stok Miktarı</th>
                          <th>Görüntülenme Sırası</th>
                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>

                          @foreach (Product p in Model)
                          {
                              <tr>
                                  <td>@p.Name</td>
                                  <td>@p.Price</td>
                                  <td>@p.Stock</td>
                                  <td>@p.DisplayIndex</td>
                                  <td><a asp-controller="ProductPicture" asp-action="Index" asp-route-productid="@p.ID">Ürün Resimleri</a></td>
                                  <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@p.ID" class="btn btn-warning">Düzenle</a></td>
                                  <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@p.ID" class="btn btn-danger">Sil</a></td>
                              </tr>
                          }
                          

                    </table>
                    
                    
                  </div>
                  </div>
              </div>
            </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        
      </div>
    </div>