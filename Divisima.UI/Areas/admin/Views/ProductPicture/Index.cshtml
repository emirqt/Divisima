@model IQueryable<ProductPicture>

<div class="container body">
    <div class="main_container">


        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">



                <div class="row">
                    <div class="col-md-12 col-sm-12 ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Ürün Fotoğraf Yönetimi</h2>
                                <a asp-controller="ProductPicture" asp-action="New" asp-route-productid="@ViewBag.ProductId" class="btn btn-success float-right">Yeni Ürün Fotoğrafı</a>
                                <div class="clearfix"></div>
                            </div>

                            <div class="x_content">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card-box table-responsive">
                                            <p class="text-muted font-13 m-b-30">
                                            </p>
                                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Resim Adı</th>
                                                        <th>Resim</th>
                                                        <th>Görüntülenme Sırası</th>
                                                        <th></th>
                                                        <th></th>
                                                    </tr>
                                                </thead>

                                                @foreach (ProductPicture pp in Model)
                                                {
                                                    <tr>
                                                        <td>@pp.Name</td>
                                                        <td><img src="@pp.Picture" width="250"/></td>
                                                        <td>@pp.DisplayIndex</td>
                                                        <td><a asp-controller="ProductPicture" asp-action="Edit" asp-route-id="@pp.ID" class="btn btn-warning">Düzenle</a></td>
                                                        <td><a asp-controller="ProductPicture" asp-action="Delete" asp-route-id="@pp.ID" class="btn btn-danger">Sil</a></td>
                                                    </tr>
                                                }


                                            </table>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->


    </div>
</div>